        <parameter name="vmBytes" value="1G"/>
        <parameter name="timeout" value="60s"/>

        <parameter name="jmeterHome" value="/home/chamara/Programs/apache-jmeter-3.2"/>
        <parameter name="testPlan" value="/home/chamara/stress-test-framework/src/test/jmeter/CUSTOM/Concurrency_Thread_Group.jmx"/>
        <parameter name="resultCsv" value="/home/chamara/stress-test-framework/target/Concurrency_Thread_Group.csv"/>
        <classes>
            <class name="org.wso2.stress.MakeStress" />
            <class name="org.wso2.stress.StressTest" />
        </classes>
    </test>
</suite>